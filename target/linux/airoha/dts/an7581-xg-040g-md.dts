/dts-v1/;

#include <dt-bindings/leds/common.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "an7581.dtsi"

/ {
    model = "Nokia Bell XG-040G-MD";
    compatible = "bell,xg-040g-md", "airoha,an7581";

    efuse-banks {
        compatible = "airoha,an7581-efuses";
        #address-cells = <1>;
        #size-cells = <0>;

        bank@0 {
            reg = <0>;
        };

        bank@1 {
            reg = <1>;
        };
    };

    aliases {
        serial0 = &uart1;
        ethernet0 = &gdm1;
        ethernet1 = &gdm4;
        led-boot = &led_pwr;
        led-failsafe = &led_pwr;
        led-running = &led_pwr;
        led-upgrade = &led_pwr;
    };

    chosen {
        bootargs = "console=ttyS0,115200n8 loglevel=7 earlycon";
        stdout-path = "serial0:115200n8";
        bootargs-append = " ubi.mtd=ubi,2048 rootfstype=squashfs ubi.block=0,rootfs root=/dev/ubiblock0_0 rootwait";
    };

    memory@80000000 {
        device_type = "memory";
        reg = <0x0 0x80000000 0x0 0x20000000>;
    };

    leds {
        compatible = "gpio-leds";

        led_pwr: led-0 {
            label = "green:pwr";
            color = <LED_COLOR_ID_GREEN>;
            function = LED_FUNCTION_POWER;
            gpios = <&en7581_pinctrl 17 GPIO_ACTIVE_LOW>;
            default-state = "on";
        };

        led_pon: led-1 {
            label = "green:pon";
            color = <LED_COLOR_ID_GREEN>;
            function = LED_FUNCTION_STATUS;
            gpios = <&en7581_pinctrl 19 GPIO_ACTIVE_LOW>;
            default-state = "off";
        };

        led_internet: led-2 {
            label = "green:internet";
            color = <LED_COLOR_ID_GREEN>;
            function = LED_FUNCTION_WAN;
            gpios = <&en7581_pinctrl 20 GPIO_ACTIVE_LOW>;
            default-state = "off";
        };
    };

    keys {
        compatible = "gpio-keys";

        reset {
            label = "reset";
            linux,code = <KEY_RESTART>;
            gpios = <&en7581_pinctrl 28 GPIO_ACTIVE_LOW>;
            debounce-interval = <60>;
        };
    };
};

&en7581_pinctrl {
    gpio-ranges = <&en7581_pinctrl 0 13 47>;

    mdio_pins: mdio-pins {
        mux {
            function = "mdio";
            groups = "mdio";
        };

        conf {
            pins = "gpio2";
            output-high;
        };
    };

    pcie0_rst_pins: pcie0-rst-pins {
        conf {
            pins = "pcie_reset0";
            drive-open-drain = <1>;
        };
    };

    pcie1_rst_pins: pcie1-rst-pins {
        conf {
            pins = "pcie_reset1";
            drive-open-drain = <1>;
        };
    };

    gswp2_led0_pins: gswp2-led0-pins {
        mux {
            function = "phy2_led0";
            pins = "gpio34";
        };
    };

    gswp3_led0_pins: gswp3-led0-pins {
        mux {
            function = "phy3_led0";
            pins = "gpio35";
        };
    };

    gswp4_led0_pins: gswp4-led0-pins {
        mux {
            function = "phy4_led0";
            pins = "gpio42";
        };
    };
};

&uart1 {
    status = "okay";
};

&snfi {
    status = "okay";
};

&spi_nand {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        partition@0 {
            label = "bootloader";
            reg = <0x0 0x80000>;
            read-only;
        };

        partition@80000 {
            label = "env";
            reg = <0x80000 0x80000>;
        };

        partition@100000 {
            label = "ubi";
            reg = <0x100000 0x0>;
        };
    };
};

&i2c0 {
    status = "okay";
};

&npu {
    status = "okay";
};

&eth {
    status = "okay";
};

&gdm1 {
    status = "okay";
    
    fixed-link {
        speed = <10000>;
        full-duplex;
        pause;
    };
};

&gdm4 {
    status = "okay";
    phy-handle = <&phy15>;
    phy-mode = "2500base-x";
    label = "eth1";
};

&switch {
    status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&mdio_pins>;
};

&gsw_port1 {
    status = "disabled";
};

&gsw_port2 {
    status = "okay";
    label = "lan2";
};

&gsw_port3 {
    status = "okay";
    label = "lan3";
};

&gsw_port4 {
    status = "okay";
    label = "lan4";
};

&gsw_phy2 {
    status = "okay";
    pinctrl-names = "gbe-led";
    pinctrl-0 = <&gswp2_led0_pins>;
};

&gsw_phy2_led0 {
    status = "okay";
    function = LED_FUNCTION_LAN;
    active-low;
};

&gsw_phy3 {
    status = "okay";
    pinctrl-names = "gbe-led";
    pinctrl-0 = <&gswp3_led0_pins>;
};

&gsw_phy3_led0 {
    status = "okay";
    function = LED_FUNCTION_LAN;
    active-low;
};

&gsw_phy4 {
    status = "okay";
    pinctrl-names = "gbe-led";
    pinctrl-0 = <&gswp4_led0_pins>;
};

&gsw_phy4_led0 {
    status = "okay";
    function = LED_FUNCTION_LAN;
    active-low;
};

&mdio {
    phy15: ethernet-phy@f {
        compatible = "ethernet-phy-id03a2.a411", "ethernet-phy-ieee802.3-c45";
        reg = <15>;
        phy-mode = "2500base-x";
    };
};

&pcie0 {
    status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&pcie0_rst_pins>;
};

&pcie1 {
    status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&pcie1_rst_pins>;
};
